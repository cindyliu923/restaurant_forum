<div class="container">

  <h1>餐廳分類總表</h1>

  <div class="row">

    <div class="col-md-12">

      <div>
        <%= link_to 'Restaurant', admin_restaurants_path, class: "btn btn-default btn-xs" %> |
        <%= link_to 'Category', admin_categories_path, class: "btn btn-default btn-xs" %>
      </div>
        <br>
        
        <div class="form-inline" >
          <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
          </div>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
        </div>
          <br>

      <table class="table table-hover table-bordered">
        <thead>
          <tr class="active">
            <th>#</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr class="warning">
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>